#!/usr/bin/env ruby -I lib
# frozen_string_literal: true

require 'word_clock/stripe'
require 'word_clock/fade_candy'
require 'word_clock/border'

if ARGV.size.zero?
  now = Time.new
  hour = now.hour
  min = now.min
elsif 2 == ARGV.size
  hour = ARGV.first.to_i
  min = ARGV.last.to_i
else
  warn "Unknown arguments #{ARGV}"
  exit 1
end

stripe = WordClock::Stripe.new
clock = WordClock::FadeCandy.new('wordclock', 7890)
clock.show(stripe.pixels(hour, min))
